<!--Card-->

<div id="card-<%= article.id %>" class="card card-img col-5 mx-auto">

  <!--Card image-->
  <div class="view overlay view-card">
        <div class="img-fluid card-img" style="background-image: url(<%= article.hero_img_url %>)" alt=""></div>
        <a href="articles/<%=article.id%>">
          <div class="mask rgba-white-slight"></div>
        </a>
  </div>

  <!--Card content-->
  <div class="card-body">
      <!--Title-->
      <h4 class="card-title"><%= article.title %></h4>
      <!--Text-->
      <p class="card-text text-shortener" id="replace"><%= article.tagline %></p>
  </div>

  <div class="card-footer">
    <p> testing </p>
  </div>
</div>

<% if (cardRows % 2 === 0) {%>
</div>
<div class="row">
<% cardRows = 0 %>
<%}%>
<!--/.Card-->
