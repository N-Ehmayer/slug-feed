<h1 class="article-title"><%= article.title %></h1>
<div class="sections-container">
  <% for (let section of article.sections) { %>
    <div class="row section-content">
      <div class="col">
        <p><%= section.content %></p>
      </div>
      <div class="col-1">
        <div class="popover-markup">
          <a href="#" onclick="return false;" class="trigger fa fa-comment" aria-hidden="true"></a>
          <div style="display: none" class="head hide">New Comment</div>
          <div style="display: none" class="content hide">
            <form id="comment-box">
              <div class="form-group">
                <input
                  type="hidden"
                  name="section-id"
                  value="<%= section.id %>"
                  >
                <input
                  type="text"
                  class="form-control"
                  placeholder="Type somethingâ€¦"
                  >
              </div>
              <input type="submit" class="btn btn-default btn-block">
          </form>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
